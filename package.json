{
	"name": "cloudflare-worker-status-page",
	"description": "Cloudflare Worker status page with Svelte frontend",
	"private": true,
	"type": "module",
	"scripts": {
		"cf-typegen": "wrangler types",
		"prebuild:frontend": "mkdir -p public",
		"build:frontend": "vite build",
		"check": "tsc && wrangler deploy --dry-run",
		"deploy": "npm run build:frontend && wrangler deploy",
		"dev": "wrangler dev",
		"dev:frontend": "vite dev",
		"predeploy": "wrangler d1 migrations apply DB --remote",
		"seedLocalD1": "wrangler d1 migrations apply DB --local"
	},
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "^5.0.4",
		"@tsconfig/svelte": "^5.0.4",
		"svelte": "^5.2.9",
		"svelte-check": "^4.0.8",
		"typescript": "5.9.3",
		"vite": "^6.0.3",
		"wrangler": "4.51.0"
	}
}
